{
    "builds": [
      {
        "src": "./server/dist/server.js",
        "use": "@vercel/node"
      },
      {
        "src": "./client/dist",
        "use": "@vercel/static"
      }
    ],
    "rewrites": [
      {
        "source": "/(.*)",
        "destination": "/server/dist/server.js"
      }
    ],
    "headers": [
      {
        "source": "/assets/(.*)\\.js",
        "headers": [
          {
            "key": "Content-Type",
            "value": "application/javascript"
          }
        ]
      },
      {
        "source": "/assets/(.*)\\.css",
        "headers": [
          {
            "key": "Content-Type",
            "value": "text/css"
          }
        ]
      }
    ]
  }